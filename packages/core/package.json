{
  "name": "@ootmm/core",
  "version": "0.0.1",
  "scripts": {
    "build": "tsx ./lib/build.ts",
    "setup": "tsx ./lib/setup.ts",
    "start": "tsx ./lib/cli.ts",
    "start:debug": "tsx ./lib/cli.ts --debug --config config.yml",
    "test": "vitest run --reporter=dot",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ootmm/data": "*",
    "@ootmm/tools": "*",
    "core-js": "^3.38.1",
    "crc-32": "^1.2.2",
    "pngjs": "^7.0.0",
    "uint8array-extras": "^1.4.0",
    "yaz0": "^3.0.1"
  },
  "main": "lib/combo/index.ts",
  "devDependencies": {
    "@types/pngjs": "^6.0.5",
    "cross-env": "^7.0.3",
    "csv": "^6.3.10",
    "fast-xml-parser": "^4.5.0",
    "type-fest": "^4.26.1"
  },
  "files": [
    "dist/data"
  ],
  "license": "MIT",
  "private": "true",
  "nx": {
    "namedInputs": {
      "default": [
        "{projectRoot}/**/*"
      ],
      "version": [
        {
          "env": "VERSION"
        }
      ]
    },
    "targets": {
      "build": {
        "inputs": [
          "default",
          "version"
        ],
        "outputs": [
          "{workspaceRoot}/build",
          "{workspaceRoot}/dist",
          "{workspaceRoot}/include/combo/custom.h"
        ],
        "dependsOn": [
          "^build",
          "setup"
        ]
      },
      "test": {
        "inputs": [
          "default"
        ],
        "outputs": [],
        "dependsOn": [
          "^build",
          "setup"
        ]
      },
      "start": {
        "dependsOn": [
          "^build",
          "setup"
        ]
      },
      "start:debug": {
        "dependsOn": [
          "^build",
          "setup"
        ]
      }
    }
  }
}
